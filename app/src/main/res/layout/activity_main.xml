<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ¦ž ClawPhone"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI Remote Phone Control"
            android:textSize="14sp"
            android:textColor="#888888"
            android:layout_marginBottom="16dp" />

        <!-- Mode selector -->
        <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioRelay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="â˜ï¸ Relay (Internet)"
                android:checked="true" />

            <RadioButton
                android:id="@+id/radioLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸ“¡ Local (WiFi)" />
        </RadioGroup>

        <!-- Auth Token -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Auth Token"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editAuthToken"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:text="changeme" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Relay URL (shown in relay mode) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutRelayUrl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relay Server URL"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editRelayUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"
                android:text="wss://miki.noriks.com/clawphone-relay/" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Port (shown in local mode) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/layoutPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="WebSocket Port"
            android:visibility="gone"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editPort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:text="8765" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Status indicators -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A000000"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/txtAccessibilityStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âšª Accessibility Service: OFF"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/txtScreenCaptureStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âšª Screen Capture: OFF"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/txtServerStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="âšª Not running"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/txtConnectionCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:id="@+id/txtIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="14sp"
                android:textIsSelectable="true" />
        </LinearLayout>

        <!-- Buttons -->
        <Button
            android:id="@+id/btnOpenAccessibility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Open Accessibility Settings"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnGrantScreenCapture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Grant Screen Capture"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/btnStartStop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="18sp"
            android:layout_marginBottom="20dp" />

        <!-- Log -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log:"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/txtLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="11sp"
            android:fontFamily="monospace"
            android:maxLines="30"
            android:scrollbars="vertical"
            android:textIsSelectable="true" />

    </LinearLayout>
</ScrollView>
